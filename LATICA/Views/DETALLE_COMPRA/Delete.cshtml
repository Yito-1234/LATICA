@model LATICA.Models.DETALLE_COMPRA

@{
    ViewBag.Title = "Delete";
}

<h2>Eliminar Producto</h2>


<div>
 
    <hr />
    <dl class="dl-horizontal">

        <dt>
            <label>Producto</label>
        </dt>


        <dd>
            @Html.DisplayFor(model => model.PRODUCTO.nom_producto)
        </dd>

        <dt>
            <label>Fecha</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fecha)
        </dd>

        <dt>
            <label>Cantidad</label>
        </dt>


        <dd>
            @Html.DisplayFor(model => model.cantidad)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div style="text-align: left;width:500px" class="form-group">
            <div class="col-md-offset-2 col-md-10">

                @Html.ActionLink("Regresar", "Index", "DETALLE_COMPRA", null, new { @class = "btn btn-primary btn-large" })
                <input type="submit" value="Eliminar" class="btn btn-success" />
            </div>
        </div>



    }
</div>
