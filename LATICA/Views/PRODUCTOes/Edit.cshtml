@model LATICA.Models.PRODUCTO

@{
    ViewBag.Title = "Edit";
}

<h2>Editar Producto</h2>


@using (Html.BeginForm("Edit", "PRODUCTOes", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)

    <div class="form-group">
        <div class="col-md-10">
            <label>Nombre Producto</label>
            @Html.EditorFor(model => model.nom_producto, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nom_producto, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">

        <div class="col-md-10">
            <label>Descripción</label>
            @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">

        <div class="col-md-10">
            <label>Cantidad</label>
            @Html.EditorFor(model => model.cantidad, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.cantidad, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Imagen Actual", new { @class = "form-label col-md-2" })


        <div class="col-md-10">

            <img width="150" height="150" src="@Url.Action("ConvertirImagen","PRODUCTOes", new {id = Model.id} ) " />
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Nueva imagen", new { @class = "form-label col-md-2" })
        <input type="file" name="fotografia" />
    </div>

    <div width:500px" class="form-group">
        <div class="col-md-offset-2 col-md-10">

            <input type="submit" value="Guardar" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Regresar", "Index", "PRODUCTOes", null, new { @class = "btn btn-primary btn-large" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
